@model PoojaStores.Models.Repositories.Entity.DiscountMaster
@{
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="header-icon">
            <i class="fa fa-book"></i>
        </div>
        <div class="header-title">
            <h1>Add Discount</h1>
            <small>Master Data management.</small>
        </div>
    </section>
    <!-- Main content -->
    <div class="content">
        <div class="row">
            <!-- Form controls -->
            <div class="col-sm-12">
                <div class="card all_btn_card" id="lobicard-custom-control1" data-sortable="true">
                    <div class="card-header all_card_btn">
                        <div class="row">
                            <div class="card-title custom_title col-sm-6">
                                <h5>Add Discount</h5>
                            </div>
                            <div class="col-md-6">
                                <div class="btn-group float-right" role="group">
                                    <div class="buttonexport" id="buttonlist">
                                        <a class="btn btn-add" href="~/Master/Discounts">
                                            <i class="fa fa-reply mr-2"></i>Back
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form action="~/Master/DiscountData" method="post">
                            @Html.HiddenFor(m => m.DiscountId)
                            <div class="row">
                                <div class="col-md-3">
                                    <label>Discount Name</label>
                                    @Html.TextBoxFor(m => m.DiscountName, null, new { @placeholder = "Enter Discount Name", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.DiscountName, null, new { @class = "text-danger" })
                                </div>
                                <div class="col-md-3">
                                    <label>Discount Percentage</label>
                                    @Html.TextBoxFor(m => m.DiscountPercentage, null, new { @placeholder = "Enter Discount Percentage", @class = "form-control" })
                                   </div>

                                <div class="col-sm-3">
                                    <button type="submit" class="btn btn-success serchgaptop"> Save</button>
                                </div>
                            </div>


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.content -->
</div>