                                                    <!-- End .ratings -->
                                                    <!--<span class="tooltiptext tooltip-top"></span>
                                                </div>-->
                                                <!-- End .product-ratings -->
                                            <!--</div>-->
                                            <!-- End .product-container -->
                                            <div class="price-box">
                                                <span class="product-price">₹@(String.Format(Indian,"{0:N}",a.DiscountedCost))</span>
                                            </div>
