@model IEnumerable<PoojaStores.Models.ModelClasses.ImageDisplayModel>

    @{
    int rCnt = 1;
    Layout = "~/Views/Shared/AdminMaster.cshtml";
    }
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="header-icon">
                <i class="fa fa-image"></i>
            </div>
            <div class="header-title">
                <h1>All Home Page Category Images</h1>
                <small></small>
            </div>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-lg-12 pinpin">
                    <div class="card" data-sortable="true">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-9">
                                    <div class="card-title custom_title">
                                        <div class="row">
                                            <h4 class="col-md-8">Category Images List</h4>
                                           
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="card-body">
                            <div id="no-more-tables">
                                <table class="col-md-12 table-bordered table-striped table-condensed cf">
                                    <thead class="cf">
                                        <tr>
                                           
                                            <th>Image Number</th>
                                            <th>Image</th>
                                            <th>Category Name</th>
                                            <th>Image Size</th>

                                            <th>Edit</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var u in Model)
                                        {
                                        <tr>
                                            
                                            <td data-title="Item Name">@u.ImageNumber</td>
                                            <td data-title="Item Name"><img src="~/ProductImages/@u.Image" width="150" height="150"/></td>
                                            <td data-title="Item Name">@u.CategoryName</td>
                                            <td data-title="Item Name">@u.ImageSize</td>
                                            <td data-title="Edit"><a href="~/Image/CategoryImageData?id=@u.ImageId" class="btn btn-primary btn-sm"><i class="fa fa-edit"></i></a></td>
                                           
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section>
        <!-- /.content -->
    </div>

    
