                        <div class="table-responsive">
                            <table id="dataTableExample1" class="table table-bordered table-striped table-hover">
                                <thead class="back_table_color">
                                    <tr class="info">
                                        <th>S.No</th>
                                        <th>Customer Name</th>
                                        <th>Email Id</th>
                                        <th>Mobile Number</th>
                                        <th>Orders</th>
                                        <th>Delete</th>
                                        @*<th>Colour</th>
                                        <th>Available</th>
